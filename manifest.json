{
    "manifest_version": 3,
    "name": "Bloco de Notas",
    "version": "1.0",
    "description": "Uma extensão simples de bloco de notas para armazenar e gerenciar suas anotações localmente.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "16": "src/icons/icon 16.png",
        "48": "src/icons/icon 48.png",
        "128": "src/icons/icon 128.png"
      }
    },
    "icons": {
      "16": "src/icons/icon 16.png",
      "48": "src/icons/icon 48.png",
      "128": "src/icons/icon 128.png"
    }
  }
  